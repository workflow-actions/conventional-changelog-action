{
  "clearMocks": true,
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ],
  "coverageReporters": [
    "lcov",
    "text",
    "text-summary"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "moduleFileExtensions": [
    "js",
    "ts",
    "json"
  ],
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/*.test.ts"
  ],
  "testRunner": "jest-circus/runner",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "verbose": true
}
