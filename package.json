{
  "author": "ivankatliarchuk <https://github.com/ivankatliarchuk>",
  "bugs": {
    "url": "https://github.com/workflow-actions/conventional-changelog-action/issues"
  },
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^4.0.0",
    "conventional-changelog": "3.1.24",
    "conventional-recommended-bump": "6.1.0",
    "env-var": "7.0.0"
  },
  "description": "TypeScript template/accelerator action",
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/lodash": "4.14.168",
    "@types/node": "15.0.1",
    "@types/sinon": "10.0.0",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "@vercel/ncc": "^0.28.3",
    "chai": "4.3.4",
    "eslint": "7.26.0",
    "eslint-config-google": "0.14.0",
    "filewtf": "1.0.0",
    "git-branch-is": "4.0.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "mocha-param": "2.0.1",
    "nock": "13.0.11",
    "parcel": "2.0.0-beta.2",
    "prettier": "^2.2.1",
    "sinon": "10.0.0",
    "snyk": "1.587.0",
    "ts-jest": "26.5.5",
    "ts-node": "9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=12"
  },
  "homepage": "https://github.com/workflow-actions/conventional-changelog-action#readme",
  "keywords": [
    "github",
    "action",
    "github-actions",
    "nodejs",
    "typescript"
  ],
  "license": "ISC",
  "main": "lib/index.js",
  "name": "blueprint-github-action-typescript",
  "repository": "git+https://github.com/workflow-actions/first-action.git",
  "scripts": {
    "build": "tsc",
    "build:pack": "npm run build && npm run packsrc",
    "build:parcel": "parcel build ./src/index.ts",
    "build:ncc": "ncc build --license license -m",
    "exec": "node dist/index.js",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check '**/*.ts'",
    "help": "tsc --help; ncc --help",
    "lint": "eslint src/**/*.ts",
    "local": "ts-node src/index.ts",
    "packsrc": "tsc --noEmit && ncc build --license license --source-map -m",
    "test": "npm run test:unit",
    "test:coverage": "tsc --noEmit && jest --coverage",
    "test:jest": "tsc --noEmit && jest",
    "test:unit": "jest unit",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test",
    "test:watch": "yarn test --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add dist/index.js"
    }
  },
  "snyk": true,
  "version": "0.0.0"
}
